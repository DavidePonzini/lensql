<button class="btn btn-primary" id="list-users">List Users</button>
<button class="btn btn-primary" id="list-schemas">List Schemas</button>
<button class="btn btn-primary" id="list-tables">List Tables</button>
<button class="btn btn-primary" id="clear">Clear output</button>


<script>
    
    $('#list-users').on('click', function() {
        let dbhost = $('#dbhost').val();
        let dbport = $('#dbport').val();
        $.get(`http://${dbhost}:${dbport}/list-users`, display);
    });
    
    $('#list-schemas').on('click', function() {
        let dbhost = $('#dbhost').val();
        let dbport = $('#dbport').val();
        $.get(`http://${dbhost}:${dbport}/list-schemas`, display);
    });
    
    $('#list-tables').on('click', function() {
        let dbhost = $('#dbhost').val();
        let dbport = $('#dbport').val();
        $.get(`http://${dbhost}:${dbport}/list-tables`, display);
    });

    $('#clear').on('click', function() {
        clear_result();
    });
</script>